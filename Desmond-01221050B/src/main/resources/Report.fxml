<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="520.0"
            prefWidth="950.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.template.ui.ReportController"
            style="-fx-background-color: linear-gradient(to bottom right, #eef2f7, #d9e2ec);">

    <!-- ===== HEADER BAR ===== -->
    <top>
        <HBox alignment="CENTER_LEFT"
              spacing="20"
              style="-fx-padding: 20;
                     -fx-background-color: #1f2937;">

            <Label text="ðŸ“Š Student Academic Report"
                   style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: white;" />

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Import CSV"
                    onAction="#importCsv"
                    style="-fx-background-color: #f39c12;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 20;
                           -fx-padding: 8 20;
                           -fx-cursor: hand;" />

            <Button text="Export CSV"
                    onAction="#exportCsv"
                    style="-fx-background-color: #9b59b6;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 20;
                           -fx-padding: 8 20;
                           -fx-cursor: hand;" />
        </HBox>
    </top>

    <!-- ===== MAIN CONTENT AREA ===== -->
    <center>
        <VBox spacing="15"
              style="-fx-padding: 30;">

            <Label text="Student Records"
                   style="-fx-font-size: 18px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #34495e;" />

            <TableView fx:id="reportTable"
                       VBox.vgrow="ALWAYS"
                       style="-fx-background-color: white;
                              -fx-background-radius: 12;
                              -fx-border-radius: 12;
                              -fx-border-color: #cbd5e1;">

                <columns>
                    <TableColumn fx:id="reportIdColumn" text="Student ID" prefWidth="120"/>
                    <TableColumn fx:id="reportNameColumn" text="Full Name" prefWidth="180"/>
                    <TableColumn fx:id="reportProgrammeColumn" text="Programme" prefWidth="160"/>
                    <TableColumn fx:id="reportLevelColumn" text="Academic Level" prefWidth="130"/>
                    <TableColumn fx:id="reportGpaColumn" text="GPA Score" prefWidth="110"/>
                    <TableColumn fx:id="reportStatusColumn" text="Academic Status" prefWidth="160"/>
                </columns>

            </TableView>

        </VBox>
    </center>

</BorderPane>